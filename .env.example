# Rename this file to ".env" and update the values before running the app

# Secret key for signing JWT tokens (keep this secure and private)
JWT_SECRET=your_jwt_secret_here

# Port number where the server will run
PORT=3000

# MongoDB connection URI
# Example for local MongoDB: mongodb://localhost:27017/bookdb
# For MongoDB Atlas, use your cluster connection string without credentials exposed
MONGO_URI=mongodb://localhost:27017/bookdb
